#include <stdio.h> 
#include <math.h>
int main () {
    
    int b,c;
    double a;

    printf("Введіть значення b = ");
    scanf("%d", &b);

    printf("Введіть значення c = ");
    scanf("%d", &c);

    if (c == 4) a = pow (b, 2) + 2 * sqrt ( c );
    if (c == 0) a = b / (c - b);
    if (c == -5)a = b + 12 * pow (c , 4);

    printf("Значееня A = %.2f", a);

    return 0;
    

}

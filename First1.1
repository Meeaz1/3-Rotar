#include <stdio.h> 
#include <math.h>
int main () {
    
    int b,c;
    double a;

    printf("Введіть значення b = ");
    scanf("%d", &b);

    printf("Введіть значення c = ");
    scanf("%d", &c);
    if ( c == 4 )
    {
        a = pow (b, 2) + 2 * sqrt ( c );
        printf("a=%.2f", a);
    }
    
    else if (c == 0)
    {
       if (b == 0) {printf ("Не можна ділити на 0!");}
       else {a = b / (c - b);
        printf("a=%.2f", a); }
    }
    else if (c == -5)
    {
        a = b + 12 * pow (c , 4);
        printf("a=%.2f", a);
    }
    else {
        printf("Це не можливо!");
    }
    
    return 0;
}

#include <stdio.h> 
#include <math.h>
int main () {
    
    int b,c;
    double a;

    printf("Введіть значення b = ");
    scanf("%d", &b);

    printf("Введіть значення c = ");
    scanf("%d", &c);

    if ( c == 4 )
    {
        a = pow (b, 2) + 2 * sqrt ( c );
    }
    
    else if (c == 0)
    {
        a = b / (c - b);
    }
    else if (c == -5)
    {
        a = b + 12 * pow (c , 4);
    }
    else {
        printf("Це не можливо!");
    }
    printf("a=%.2f", a);

    return 0;
}
